@model IEnumerable<FinalWork1101.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderComposition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPickupPointId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderClientSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderClientFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderClientPatronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderComposition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPickupPointId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderClientSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderClientFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderClientPatronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
